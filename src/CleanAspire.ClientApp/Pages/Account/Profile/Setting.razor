@page "/profile/setting"
<PageTitle>@L["Setting"]</PageTitle>
<MudText Typo="Typo.h2">@L["Settings"]</MudText>
<MudTabs Outlined="true" Position="Position.Left" Class="mt-3"  Border="true"
    ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="@L["Profile"]">
        <ProfileSetting />
    </MudTabPanel>
    <MudTabPanel Text="@L["Account"]">
        <AccountSetting></AccountSetting>
    </MudTabPanel>
    <MudTabPanel Text="@L["Offline Mode"]">
        <OfflineModeSetting></OfflineModeSetting>
    </MudTabPanel>
    <MudTabPanel Text="@L["Security"]">
      <TwofactorSetting></TwofactorSetting>
    </MudTabPanel>
</MudTabs>
